  "steps": [
    {
      "stepNumber": 1,
      "instruction": "Preheat oven to 400\u00b0F (200\u00b0C). Line a baking sheet with parchment paper.",
      "isOptional": false
    },
    {
      "stepNumber": 2,
      "instruction": "In a large bowl, whisk together flour, sugar, baking powder, salt, and lemon zest.",
      "isOptional": false
    },
    {
      "stepNumber": 3,
      "instruction": "Cut in cold butter using a pastry cutter or fork until mixture resembles coarse crumbs.",
      "isOptional": false
    },
    {
      "stepNumber": 4,
      "instruction": "In a small bowl, whisk together cream, egg, and vanilla.",
      "isOptional": false
    },
    {
      "stepNumber": 5,
      "instruction": "Pour wet ingredients into dry ingredients and stir until just combined.",
      "isOptional": false
    },
    {
      "stepNumber": 6,
      "instruction": "Gently fold in blueberries, being careful not to break them.",
      "isOptional": false
    },
    {
      "stepNumber": 7,
      "instruction": "Turn dough onto a floured surface and pat into an 8-inch circle about 3/4 inch thick.",
      "isOptional": false
    },
    {
      "stepNumber": 8,
      "instruction": "Cut into 8 wedges and place on prepared baking sheet, spacing 2 inches apart.",
      "isOptional": false
    },
    {
      "stepNumber": 9,
      "instruction": "Bake for 18-20 minutes until golden brown.",
      "isOptional": false
    },
    {
      "stepNumber": 10,
      "instruction": "While scones cool, whisk together glaze ingredients. Drizzle over warm scones before serving.",
      "isOptional": false
    }
