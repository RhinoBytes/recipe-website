  "steps": [
    {
      "stepNumber": 1,
      "instruction": "In a bowl, combine lime juice, orange juice, garlic, cumin, chili powder, olive oil, salt, and pepper.",
      "isOptional": false
    },
    {
      "stepNumber": 2,
      "instruction": "Place flank steak in a resealable bag and pour marinade over it. Refrigerate for at least 2 hours or overnight.",
      "isOptional": false
    },
    {
      "stepNumber": 3,
      "instruction": "Remove steak from marinade and pat dry. Let come to room temperature for 20 minutes.",
      "isOptional": false
    },
    {
      "stepNumber": 4,
      "instruction": "Heat a grill or cast-iron skillet over high heat.",
      "isOptional": false
    },
    {
      "stepNumber": 5,
      "instruction": "Cook steak for 4-5 minutes per side for medium-rare, or to desired doneness.",
      "isOptional": false
    },
    {
      "stepNumber": 6,
      "instruction": "Let steak rest for 10 minutes, then slice thinly against the grain.",
      "isOptional": false
    },
    {
      "stepNumber": 7,
      "instruction": "Warm tortillas on the grill or in a dry skillet until slightly charred.",
      "isOptional": false
    },
    {
      "stepNumber": 8,
      "instruction": "Assemble tacos by placing sliced steak on tortillas.",
      "isOptional": false
    },
    {
