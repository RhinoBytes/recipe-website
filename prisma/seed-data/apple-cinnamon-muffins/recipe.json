  "steps": [
    {
      "stepNumber": 1,
      "instruction": "Preheat oven to 375\u00b0F (190\u00b0C). Line a 12-cup muffin tin with paper liners.",
      "isOptional": false
    },
    {
      "stepNumber": 2,
      "instruction": "In a large bowl, whisk together flour, baking powder, baking soda, cinnamon, and salt.",
      "isOptional": false
    },
    {
      "stepNumber": 3,
      "instruction": "In another bowl, whisk melted butter, sugar, eggs, and vanilla until well combined.",
      "isOptional": false
    },
    {
      "stepNumber": 4,
      "instruction": "Stir buttermilk into wet ingredients.",
      "isOptional": false
    },
    {
      "stepNumber": 5,
      "instruction": "Gently fold wet ingredients into dry ingredients until just combined. Do not overmix.",
      "isOptional": false
    },
    {
      "stepNumber": 6,
      "instruction": "Fold in diced apples until evenly distributed.",
      "isOptional": false
    },
    {
      "stepNumber": 7,
      "instruction": "Divide batter evenly among muffin cups, filling each about 3/4 full.",
      "isOptional": false
    },
    {
      "stepNumber": 8,
      "instruction": "Bake for 20-22 minutes until golden and a toothpick comes out clean.",
      "isOptional": false
    },
    {
      "stepNumber": 9,
      "instruction": "Cool in pan for 5 minutes before transferring to a wire rack. Serve warm or at room temperature.",
      "isOptional": false
    }
