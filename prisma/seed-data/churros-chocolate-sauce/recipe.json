  "steps": [
    {
      "stepNumber": 1,
      "instruction": "In a saucepan, bring water, butter, and salt to a boil.",
      "isOptional": false
    },
    {
      "stepNumber": 2,
      "instruction": "Remove from heat and stir in flour until mixture forms a ball.",
      "isOptional": false
    },
    {
      "stepNumber": 3,
      "instruction": "Let cool for 5 minutes, then beat in eggs one at a time until smooth.",
      "isOptional": false
    },
    {
      "stepNumber": 4,
      "instruction": "Transfer dough to a piping bag fitted with a large star tip.",
      "isOptional": false
    },
    {
      "stepNumber": 5,
      "instruction": "Heat oil in a deep pot to 375\u00b0F (190\u00b0C).",
      "isOptional": false
    },
    {
      "stepNumber": 6,
      "instruction": "Pipe 6-inch strips of dough into hot oil, cutting with scissors. Fry 2-3 at a time.",
      "isOptional": false
    },
    {
      "stepNumber": 7,
      "instruction": "Cook for 2-3 minutes per side until golden brown. Drain on paper towels.",
      "isOptional": false
    },
    {
      "stepNumber": 8,
      "instruction": "Mix cinnamon and sugar. Roll warm churros in mixture to coat.",
      "isOptional": false
    },
    {
      "stepNumber": 9,
      "instruction": "For chocolate sauce: Heat cream until simmering, pour over chopped chocolate. Stir until smooth.",
      "isOptional": false
    },
    {
      "stepNumber": 10,
      "instruction": "Serve churros warm with chocolate sauce for dipping.",
      "isOptional": false
    }
