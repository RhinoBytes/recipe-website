  "steps": [
    {
      "stepNumber": 1,
      "instruction": "Remove membrane from back of ribs by sliding a knife under it and pulling off with paper towel.",
      "isOptional": false
    },
    {
      "stepNumber": 2,
      "instruction": "Mix all dry rub ingredients together in a bowl.",
      "isOptional": false
    },
    {
      "stepNumber": 3,
      "instruction": "Pat ribs dry and generously coat both sides with dry rub. Let sit for 30 minutes at room temperature.",
      "isOptional": false
    },
    {
      "stepNumber": 4,
      "instruction": "Preheat oven to 275\u00b0F (135\u00b0C).",
      "isOptional": false
    },
    {
      "stepNumber": 5,
      "instruction": "Wrap ribs tightly in aluminum foil and place on a baking sheet.",
      "isOptional": false
    },
    {
      "stepNumber": 6,
      "instruction": "Bake for 2.5 to 3 hours until meat is tender and pulling away from bones.",
      "isOptional": false
    },
    {
      "stepNumber": 7,
      "instruction": "Remove from oven and carefully unwrap. Preheat grill or broiler to high.",
      "isOptional": false
    },
    {
      "stepNumber": 8,
      "instruction": "Brush ribs generously with BBQ sauce on both sides.",
      "isOptional": false
    },
    {
      "stepNumber": 9,
      "instruction": "Grill or broil for 3-5 minutes per side, basting with more sauce, until caramelized.",
      "isOptional": false
    },
    {
      "stepNumber": 10,
      "instruction": "Let rest for 5 minutes, then cut between bones and serve with extra BBQ sauce.",
      "isOptional": false
    }
